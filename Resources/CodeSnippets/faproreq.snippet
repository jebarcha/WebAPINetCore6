<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Propiedad Requerida usando Fluent API</Title>
            <Author>Jimmy Javier</Author>
            <Description>Crea la definici√≥n de una propiedad requerida mediante el uso de Fluent API.</Description>
            <Shortcut>faproreq</Shortcut>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>Propiedad</ID>
                    <ToolTip>Nombre de la propiedad.</ToolTip>
                    <Default>Propiedad</Default>
                </Literal>            
            </Declarations> 
            <Code Language="CSharp">
                <![CDATA[builder.Property(p => p.$Propiedad$)
                .IsRequired();
                $end$]]>
            </Code>             
        </Snippet>
    </CodeSnippet>
</CodeSnippets>